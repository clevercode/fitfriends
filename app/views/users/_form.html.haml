= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :start_weight
    = f.text_field :start_weight
  .field
    = f.label :goal_weight
    = f.text_field :goal_weight
  .field
    = f.label :current_weight
    = f.text_field :current_weight
  .field
    = f.label :height
    = f.text_field :height
  .actions
    = f.submit 'Save'
